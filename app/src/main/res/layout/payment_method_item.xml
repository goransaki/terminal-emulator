<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/payment_method_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/payment_method_image"
            android:textSize="19sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            tools:text="Crypto Currency Account" />

        <TextView
            android:id="@+id/payment_method_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:text="RSD Account ending in **-5112"
            android:layout_below="@id/payment_method_title"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@id/payment_method_image" />

        <TextView
            android:id="@+id/payment_method_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:text="RSD Account ending in **-5112"
            android:layout_below="@id/payment_method_subtitle"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@id/payment_method_image" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
